source 'https://rubygems.org'

ruby '1.9.3'

gem 'grapevine'
gem 'roar'

<% unless withdb.empty? %>
gem '<%= withdb %>'

<% if withdb == 'activerecord' %>
gem 'activerecord', '~> 3.2.12'
gem 'standalone_migrations', '~> 2.0.5'

<% elsif withdb == 'sequel' %>
gem 'sequel'
<% end %>

group :test do
  gem 'rspec'
  gem 'rack-test'
end

group :test, :development do
  gem 'dotenv'
  gem 'thin'
  gem 'debugger'
end

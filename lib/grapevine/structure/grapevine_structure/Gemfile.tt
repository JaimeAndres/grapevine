source 'https://rubygems.org'

ruby '1.9.3'

gem 'grapevine'
gem 'roar'

<% unless withdb.empty? %>
gem '<%= dbms %>'
gem '<%= withdb %>'

<% if withdb == 'activerecord' %>
gem 'standalone_migrations'
<% end %>
<% end %>

group :test do
  gem 'rspec'
  gem 'rack-test'
end

group :test, :development do
  gem 'dotenv'
  gem 'thin'
  gem 'debugger'
end
